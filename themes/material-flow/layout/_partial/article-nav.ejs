<% if (post.prev || post.next) { %>
  <nav id="article-nav">
    <% if (post.prev) { %>
      <a
        href="<%=url_for(post.prev.path)%>"
        id="article-nav-newer"
        class="article-nav-link-wrap"
        title="<%=post.prev.title%>"
        rel="prev"
      >
        <strong class="article-nav-caption">Prev</strong>
        <p class="article-nav-title"><%= post.prev.title %></p>
        <i class="icon fa fa-chevron-left" id="icon-chevron-left"></i>
      </a>
    <% } %>
    <% if (post.next) { %>
      <a
        href="<%=url_for(post.next.path)%>"
        id="article-nav-newer"
        class="article-nav-link-wrap"
        title="<%=post.next.title%>"
        rel="next"
      >
        <strong class="article-nav-caption">Next</strong>
        <p class="article-nav-title"><%= post.next.title %></p>
        <i class="icon fa fa-chevron-right" id="icon-chevron-right"></i>
      </a>
    <% } %>
    <div style="clear:both;"></div>
  </nav>
<% } %>