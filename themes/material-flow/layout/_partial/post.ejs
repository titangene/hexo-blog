<article class="post reveal<%= (post.title) ? "" : "no-title" %>">
  <section class="meta">
    <% if (post.title) { %>
    <h2 class="title">
      <a href="<%- url_for(post.path) %>">
        <%= post.title %>
      </a>
    </h2>
    <% } %>
    <time>
      <%= date(post.date, 'YYYY-MM-DD') %>
    </time>
		<%- partial('categories',{post:post}) %>
  </section>
  <section class="article typo">
    <div itemprop="description">
      <% if (!/<img src=.*/i.test(post.excerpt) && post.cover_image != null) { %>
        <p><img src="<%= post.cover_image %>" alt="<%= post.title %>"></p>
      <% } %>
      <%- post.excerpt.replace(/..\/images/, '\/images') || post.content %>
    <div>

    <% if (post.excerpt) { %>
	  <div class="readmore">
      <a href="<%- url_for(post.path) %>">Read More</a>
    </div>
    <% } %>

    <% if (post.tags && post.tags.length) { %>
	  <div class="full-width auto-padding tags">
      <% post.tags.each(function(item){ %>
        <a href="<%- url_for(item.path) %>"><%=item.name %></a>
      <%})%>
	  </div>
    <% } %>
  </section>
</article>