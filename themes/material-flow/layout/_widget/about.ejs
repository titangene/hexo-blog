<section class="m_widget about">
  <div class="avatar-section">
    <% if(config.avatar) { %>
    <style>
    .avatar-cover {
        background: url(<%= url_for(theme.avatar_cover) %>) 0 10% / cover no-repeat;
    }
    </style>
    <div class="avatar-cover"></div>
    <img class="avatar" src="<%= url_for(config.avatar) %>" />
    <%} %>
  </div>
  <div class="header"><%=config.author %></div>
  <div class="content">
      <div class="desc"><%=config.description %></div>
  </div>
  <div class="content">
      <meta itemprop="url" content="<%= config.url %>">
      <% if (config.social) { %>
      <div class="social-wrapper">
      <% config.social.forEach(function(value, key) {
          if (value.url && value.slug) { %>
          <a itemprop="sameAs" href="<%= value.url %>" class="social <%= value.slug %>" target="_blank" rel="external">
              <span class="icon icon-<%= value.slug %>"></span>
          </a>
      <% } }); %>
      </div>
      <% } %>
  </div>
</section>